{
    "extends": "eslint:recommended",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "globals": {
        "console": true,
        "process": true,
        "Buffer": true
    },
    "rules": {
        "quotes": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/no-unresolved": 0,
        "func-names": 0,
        "vars-on-top": 0,
        "global-require": 0,
        "no-shadow": [
            "error",
            {
                "allow": [
                    "err",
                    "callback"
                ]
            }
        ],
        "max-len": 0,
        "no-console": 0,
        "no-prototype-builtins": 0,
        "no-use-before-define": 0,
        "no-mixed-operators": 0,
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "argsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ]
    }
}
